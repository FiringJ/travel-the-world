/* pages/contact/contact.wxss */
:root {
  --primary-color: #ff6b81; /* 可爱粉色 */
  --secondary-color: #5f27cd; /* 活泼紫色 */
  --accent-color: #feca57; /* 明亮黄色 */
  --text-color: #576574;
  --secondary-text: #8395a7;
  --border-color: #f1f2f6;
  --bg-color: #f8f9fa;
  --white: #ffffff;
}

.contact-page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--bg-color);
}

.content-scroll {
  flex: 1;
  overflow-y: auto;
}

.main-content-padding {
  padding: 16px; /* Approximates p-4 */
}

/* Banner styles from sample/contact.html */
.contact-banner {
  height: 180px;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  position: relative;
  overflow: hidden;
  border-radius: 0 0 30px 30px;
  box-shadow: 0 5px 15px rgba(255, 107, 129, 0.2);
}

.contact-banner::before { /* Note: background-image URLs need to be accessible by MiniProgram */
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('https://images.unsplash.com/photo-1507608616040-a6dfc548eef8?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
  background-size: cover;
  background-position: center;
  opacity: 0.15;
}

.contact-banner-content {
  position: relative;
  z-index: 2;
  text-align: center;
}

.h1-like {
  font-size: 24px; /* text-2xl */
  font-weight: 700; /* font-bold */
  display: inline; /* to align with emojis */
}

.p-like {
  font-size: 14px; /* text-sm for banner, general p-like */
  margin-top: 8px; /* mt-2 for banner */
  display: block; /* Ensure it takes its own line */
}

.emoji-decorator {
  font-size: 24px;
  margin: 0 5px;
  display: inline-block;
  animation: float 3s infinite ease-in-out;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.cute-back {
  position: absolute;
  top: 15px; /* Adjust as needed for status bar with custom nav */
  left: 15px;
  background-color: rgba(255, 255, 255, 0.9);
  color: var(--primary-color);
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  /* backdrop-filter: blur(5px); /* May not be fully supported */
  z-index: 10;
}
.cute-back .fas {
  font-size: 16px;
}

/* Card styles from sample/contact.html and style.css */
.contact-card {
  background-color: white;
  border-radius: 20px;
  padding: 20px;
  margin-bottom: 15px; /* Default, can be overridden by Tailwind helper */
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.contact-card::after { /* Top border gradient */
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 5px;
  background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
}

.contact-icon {
  width: 50px;
  height: 50px;
  background-color: var(--accent-color);
  color: white;
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15px;
  flex-shrink: 0;
  font-size: 20px;
  box-shadow: 0 5px 15px rgba(254, 202, 87, 0.3);
}
.contact-icon .fab {
  /* placeholder style if needed */
}

.qrcode-container {
  background-color: white;
  border-radius: 20px;
  padding: 20px;
  margin-bottom: 15px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
  text-align: center;
  position: relative;
  overflow: hidden;
}

.qrcode-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 80px;
  background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
  border-radius: 20px 20px 50% 50%; /* May need to simplify for WXSS */
  z-index: 0;
}

.qrcode-content {
  position: relative;
  z-index: 1;
}

.qrcode-image {
  width: 150px;
  height: 150px;
  margin: 20px auto;
  padding: 5px;
  background-color: white;
  border-radius: 15px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.qrcode-title {
  font-size: 18px;
  font-weight: 700;
  color: var(--primary-color);
  margin: 15px 0 5px;
}

.qrcode-subtitle {
  font-size: 14px;
  color: var(--secondary-text);
  display: block; /* ensure it's on its own line */
}

.group-icon {
  width: 40px;
  height: 40px;
  border-radius: 12px;
  background-color: rgba(255, 107, 129, 0.1);
  color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15px;
  flex-shrink: 0;
}
.group-icon .fas {
 /* placeholder style if needed */
}

