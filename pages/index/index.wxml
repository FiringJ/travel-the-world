<!--index.wxml-->
<view class="page-container">
    <!-- 品牌标题 -->
    <view class="app-header bg-white">
        <view class="app-title">
            <!-- 暂时用文字替代 Font Awesome 图标 -->
            <image src="../../static/images/icons/paper-plane-solid.svg" style="width: 16px; height: 16px; margin-right: 8px;"></image>
            <text>环游飞屋</text> 
        </view>
    </view>

    <!-- Banner轮播 -->
    <view class="banner-swiper">
        <image src="https://images.unsplash.com/photo-1506929562872-bb421503ef21?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="旅游特惠" class="banner-image" mode="aspectFill"></image>
        <view class="banner-overlay">
            <view class="banner-title">探索世界的每个角落</view>
            <view class="banner-subtitle">挑选你梦想的目的地，留下美好回忆</view>
        </view>

        <!-- 悬浮搜索框 -->
        <view class="search-float">
            <view class="weui-search-inner">
                <!-- 暂时用文字替代 Font Awesome 图标 -->
                <text class="fas fa-search text-gray-400">[S]</text>
                <input type="text" placeholder="搜索你的梦想目的地" class="weui-search-input" />
            </view>
        </view>
    </view>

    <!-- 旅游海报瀑布流 -->
    <view class="masonry-grid">
        <!-- Item 1 -->
        <view class="masonry-item">
            <view class="card">
                <image src="https://images.unsplash.com/photo-1516483638261-f4dbaf036963?ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=80" alt="意大利风情" class="w-full" mode="widthFix"></image>
                <view class="card-content">
                    <text class="tag">意大利</text>
                    <view class="font-medium mt-2">文艺复兴艺术之旅</view>
                    <view class="location-badge">
                        <!-- 暂时用文字替代 Font Awesome 图标 -->
                        <text class="fas fa-map-marker-alt">[M]</text>
                        <text>罗马 · 佛罗伦萨 · 威尼斯</text>
                    </view>
                    <view class="price-tag mt-2">¥16,999起</view>
                </view>
            </view>
        </view>
        <!-- Item 2 -->
        <view class="masonry-item">
            <view class="card">
                <image src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=80" alt="海岛度假" class="w-full" mode="widthFix"></image>
                <view class="card-content">
                    <text class="tag">巴厘岛</text>
                    <view class="font-medium mt-2">热带风情度假之旅</view>
                    <view class="location-badge">
                        <text class="fas fa-map-marker-alt">[M]</text>
                        <text>金巴兰 · 库塔 · 乌布</text>
                    </view>
                    <view class="price-tag mt-2">¥8,999起</view>
                </view>
            </view>
        </view>
        <!-- Card 3 (Japan) -->
        <view class="masonry-item">
            <view class="card">
                <image src="https://images.unsplash.com/photo-1528181304800-259b08848526?ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=80" alt="日本风光" class="w-full" mode="widthFix"></image>
                <view class="card-content">
                    <text class="tag">日本</text>
                    <view class="font-medium mt-2">樱花季温泉乐享</view>
                    <view class="location-badge">
                        <text class="fas fa-map-marker-alt">[M]</text>
                        <text>东京 · 京都 · 大阪</text>
                    </view>
                    <view class="price-tag mt-2">¥7,999起</view>
                </view>
            </view>
        </view>
        <!-- Card 4 (Nordics) -->
        <view class="masonry-item">
            <view class="card">
                <image src="https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=80" alt="北欧风光" class="w-full" mode="widthFix"></image>
                <view class="card-content">
                    <text class="tag">北欧</text>
                    <view class="font-medium mt-2">峡湾极光奇幻之旅</view>
                    <view class="location-badge">
                        <text class="fas fa-map-marker-alt">[M]</text>
                        <text>挪威 · 瑞典 · 芬兰</text>
                    </view>
                    <view class="price-tag mt-2">¥19,999起</view>
                </view>
            </view>
        </view>
        <!-- Card 5 (Family) -->
        <view class="masonry-item">
            <view class="card">
                <image src="https://images.unsplash.com/photo-1533105079780-92b9be482077?ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=80" alt="亲子游" class="w-full" mode="widthFix"></image>
                <view class="card-content">
                    <text class="tag">亲子</text>
                    <view class="font-medium mt-2">环球主题乐园欢乐游</view>
                    <view class="location-badge">
                        <text class="fas fa-map-marker-alt">[M]</text>
                        <text>新加坡 · 香港 · 东京</text>
                    </view>
                    <view class="price-tag mt-2">¥10,999起</view>
                </view>
            </view>
        </view>
        <!-- Card 6 (USA) -->
        <view class="masonry-item">
            <view class="card">
                <image src="https://images.unsplash.com/photo-1512100356356-de1b84283e18?ixlib=rb-1.2.1&auto=format&fit=crop&w=400&q=80" alt="美国风光" class="w-full" mode="widthFix"></image>
                <view class="card-content">
                    <text class="tag">美国</text>
                    <view class="font-medium mt-2">黄石公园自然探秘</view>
                    <view class="location-badge">
                        <text class="fas fa-map-marker-alt">[M]</text>
                        <text>黄石 · 大提顿 · 盐湖城</text>
                    </view>
                    <view class="price-tag mt-2">¥15,999起</view>
                </view>
            </view>
        </view>
    </view>

    <!-- 悬浮按钮 -->
    <view class="floating-btn animate-bounce">
        <!-- 暂时用文字替代 Font Awesome 图标 -->
        <text class="fas fa-paper-plane">[P]</text>
    </view>
</view>
